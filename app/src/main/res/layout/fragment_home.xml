<!-- res/layout/fragment_home.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.slider.Slider
    android:id="@+id/sampleRateSlider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:valueFrom="0"
    android:valueTo="4"
    android:stepSize="1"
    android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/sampleRateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Rate: 44100 Hz"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/storedTimeSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="0"
        android:valueTo="12"
        android:layout_marginTop="16dp"
        android:stepSize="1"/>

    <TextView
        android:id="@+id/storedTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stored Time: 2h (default)"/>

    <TextView
        android:id="@+id/audioSizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio Size per Minute: 5.29 MB"/>


</LinearLayout>
